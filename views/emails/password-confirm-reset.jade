doctype html
head
	meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
	meta(name='viewport' content='width=device-width, initial-scale=1.0')
	style(type='text/css').
		/* Client-specific Styles */
		#outlook a { padding: 0;} /* Force Outlook to provide a "view in browser" menu link. */
		body{ width: 100% !important; -webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; margin: 0; padding: 0; }
		/* Prevent Webkit and Windows Mobile platforms from changing default font sizes, while not breaking desktop design. */
		.ExternalClass { width: 100%; } /* Force Hotmail to display emails at full width */
		.ExternalClass, .ExternalClass p, .ExternalClass span, .ExternalClass font, .ExternalClass td, .ExternalClass div { line-height: 100%; } /* Force Hotmail to display normal line spacing.*/
		.image_fix { max-width: 100% !important; display: block !important; }
		img { outline:none; text-decoration: none; border: none; -ms-interpolation-mode: bicubic; }
		a img { border: none; }
		p { margin: 0px 0px !important; }
		table td { border-collapse: collapse; }
		table { border-collapse: collapse; mso-table-lspace: 0pt; mso-table-rspace: 0pt; }
		a { color: #333; text-decoration: none;text-decoration:none!important; display: inline-block; }
body
	table(bgcolor='#c1c1c1', cellpadding='0', cellspacing='0', width='100%', style='font-family: Roboto, "helvetica neue", sans-serif;')
		// Spacing
		tr
			td(style='font-size: 0; line-height: 0;', height='100')
		tr
			td(align='center')
				table(bgcolor='#fff', cellpadding='0', cellspacing='0')
					// Logo
					tr
						td(align='center', bgcolor='#00245a', style='padding: 10px 0;')
							a(href='#{homepage}', target='_blank')
								img.image_fix(width='54', height='54', src='#{app_logo}')
					tr
						td(align='center', style='padding: 20px;')
							table(cellspacing='0', cellpadding='0', width='100%')
								// Title
								tr
									td
										p(style='font-size: 26px; font-weight: bold;')
											| You have requested to reset your password
								// Spacing
								tr
									td(style='font-size: 0; line-height: 0;', height='20')
								// Content
								tr
									td(align='center')
										p(style='font-size: 15px; padding-bottom: 20px; line-height: 1.4;')
											| Hi,&nbsp;
											b #{user_full_name}
											br
											| To reset your password, click the following link and follow the instructions.
								// Spacing
								tr
									td(style='font-size: 0; line-height: 0;', height='30')
								// Button
								tr
									td(align='center')
										a(href='#{confirm_link}', style='border-radius: 8px; background-color: #00245a; padding: 15px 40px; color: #fff; font-weight: bold; text-align: center; font-size: 15px;')
											| Reset Password
								// Spacing
								tr
									td(style='font-size: 0; line-height: 0;', height='30')
								// Line
								tr
									td(style='border: solid 1px #d9d9d9;')
								// Spacing
								tr
									td(style='font-size: 0; line-height: 0;', height='10')
								// Signature
								tr
									tr
										td
											table(cellspacing='0', cellpadding='0', align='left', width='100%')
												tr
													td(style='line-height: 1.8;', align='center')
														p(style='font-size: 15px;')
															| Workspace Name:&nbsp;
															b
																| #{channel_name}
														p(style='font-size: 15px;')
															| Workspace URL:&nbsp;
															b
																span #{workspace_url}
								// Spacing
								tr
									td(style='font-size: 0; line-height: 0;', height='10')
								// Line
								tr
									td(style='border: solid 1px #d9d9d9;')
								// Spacing
								tr
									td(style='font-size: 0; line-height: 0;', height='30')
								// Copyright
								tr
									td(align='center')
										p(style='font-size: 10px')
											b
												| Made by&nbsp;
											| #{app_name}
										a(href='#{homepage}', target='_blank', style='font-size: 10px')
											| #{homepage}
		// Spacing
		tr
			td(style='font-size: 0; line-height: 0;', height='100')
